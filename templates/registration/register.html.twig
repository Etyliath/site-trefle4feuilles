{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container my-4 d-flex flex-column justify-content-center">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <div class="d-lg-flex gap-3 justify-content-center align-items-center">
            <div class="">
                <h1>Créer votre compte</h1>

                <div class="">
                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm) }}
                    {{ form_label(registrationForm.username,'Pseudo' ,{'label_attr': {'class': 'm-0'}}) }}
                    {{ form_widget(registrationForm.username, {'attr':{'class': 'mb-1'}}) }}
                    {{ form_label(registrationForm.email, 'Mail', {'label_attr': {'class': 'm-0'}}) }}
                    {{ form_widget(registrationForm.email, {'attr':{'class': 'mb-1'}}) }}
                    <div class="d-flex gap-2">
                        <div>
                            {{ form_label(registrationForm.firstName, 'Prénom', {'label_attr': {'class': 'm-0'}}) }}
                            {{ form_widget(registrationForm.firstName, {'attr':{'class': 'mb-1'}}) }}
                        </div>
                        <div>
                            {{ form_label(registrationForm.lastName, 'Nom', {'label_attr': {'class': 'm-0'}}) }}
                            {{ form_widget(registrationForm.lastName, {'attr':{'class': 'mb-1'}}) }}
                        </div>
                    </div>
                    {{ form_widget(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms) }}

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Créer</button>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
                <div class="d-flex align-items-center my-3">
                    <hr class="w-100 m-0">
                    <span class="text-body-emphasis text-nowrap fw-medium mx-4">Ou</span>
                    <hr class="w-100 m-0">
                </div>
                <div class=" text-center">
                    <a href="{{ path('app_login') }}" class="btn btn-primary align-self-center">Se connecter</a>
                </div>
            </div>
            <div class="d-none d-lg-block py-3 rounded-5 ">
                <div class="rounded-5 ">
                    <img src="{{ asset('images/image1.jpg') }}" class="rounded-5 " alt="" height="400" width="400">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
