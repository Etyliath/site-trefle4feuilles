{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container my-4 d-flex flex-column justify-content-center" style="max-width: 400px;">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <div class="">
            <h1>S'inscrire</h1>

            <div class="">
                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                {{ form_label(registrationForm.username,'Pseudo' ,{'label_attr': {'class': 'm-0'}}) }}
                {{ form_widget(registrationForm.username, {'attr':{'class': 'mb-1'}}) }}
                {{ form_label(registrationForm.email, 'Mail', {'label_attr': {'class': 'm-0'}}) }}
                {{ form_widget(registrationForm.email, {'attr':{'class': 'mb-1'}}) }}
                {{ form_label(registrationForm.firstName, 'Pr√©nom', {'label_attr': {'class': 'm-0'}}) }}
                {{ form_widget(registrationForm.firstName, {'attr':{'class': 'mb-1'}}) }}
                {{ form_label(registrationForm.lastName, 'Nom', {'label_attr': {'class': 'm-0'}}) }}
                {{ form_widget(registrationForm.lastName, {'attr':{'class': 'mb-1'}}) }}
                {{ form_widget(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">S'inscrire</button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
            <div class="d-flex align-items-center my-4">
                <hr class="w-100 m-0">
                <span class="text-body-emphasis text-nowrap fw-medium mx-4">Ou</span>
                <hr class="w-100 m-0">
            </div>
            <div class=" text-center">
                <a href="{{ path('app_login') }}" class="btn btn-primary my-2 align-self-center">Se connecter</a>
            </div>
        </div>
    </div>
{% endblock %}
