{% extends 'base.html.twig' %}

{% block title %}Les créations{% endblock %}

{% block body %}
    <section class="container mx-auto my-4">
        <h3 class="text-center">Détail de la creation</h3>
        <div class="card mx-auto mb-3 w-75" >
            <div class="row g-2">
                <div class="col-md-6">
                    <img src="{{ vich_uploader_asset(creation, 'thumbnailFile') }}" class="img-fluid rounded-start"
                         alt="...">
                </div>
                <div class="col-md-6 ms-auto">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">{{ creation.name }}</h5>
                        <p class="card-text">{{ creation.description|nl2br }}</p>
                        <p class="card-text"><strong>{{ (creation.price/100) | format_currency('EUR', {rounding_mode: 'floor'}) }}</strong></p>
                        <p class="card-text">
                            <small class="text-body-secondary">
                                {% if creation.sold %}
                                    vendu
                                {% else %}
                                    <a href="#" class="ms-auto btn btn-primary">Ajouter au panier</a>
                                {% endif %}
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
