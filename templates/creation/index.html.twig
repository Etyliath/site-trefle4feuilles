{% extends 'base.html.twig' %}

{% block title %}Les créations{% endblock %}

{% block body %}
    <section class="my-4">
        <div class="form-group mx-auto w-50">
            <form action="{{ path('creations.index', {filter: 'filter'}) }}" method="get"
                  class="d-flex align-items-center gap-2">
                <label for="filter">Filtre</label>
                <select name="filter" id="filter" class="form-select">
                    <option value="">Choisir une catégorie</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>
                <button class="btn btn-primary" type="submit">>></button>
            </form>
        </div>
        {% if titleCategory %}
            <h2 class="text-center mt-1">Catégorie: {{ titleCategory.name }}</h2>
        {% else %}
            <h2 class="text-center mt-1">Toutes les catégories</h2>
        {% endif %}
        <div class="row gap-2 mx-2 justify-content-center">
            {% for creation in creations %}
                <div class="card col-12 col-md-4 col-lg-3 my-4 p-3" >
                    <img src="{{ vich_uploader_asset(creation,'thumbnailFile') }}" class="card-img-top"
                         alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mt-auto">{{ creation.name }}</h5>
                        <p class="card-text">
                            <strong>{{ (creation.price/100) | format_currency('EUR', {rounding_mode: 'floor'}) }}</strong>
                        </p>
                        <div class="">
                            <a href="{{ path('creations.single', {id: creation.id}) }}"
                               class="btn btn-primary">Detail</a>
                        </div>
                    </div>
                </div>
            {% endfor %}

            <div class="mt-3 d-flex justify-content-center justify-content-md-end">
                {{ knp_pagination_render(creations) }}
            </div>
        </div>
    </section>

{% endblock %}
