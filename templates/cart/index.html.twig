{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <section class="">
        <h1>Panier</h1>
        <div class="row ms-auto me-auto justify-content-between">
            <div class="col-6 container bg-light rounded-3 p-2">
                {% for item in cart %}
                    <div class="row ms-auto">
                        <div class="col-7">{{ item.creation.name }}</div>
                        <div class="col-2">{{ (item.creation.price/100)|format_currency('EUR', {rounding_mode: 'floor'}) }}</div>
                        <div class="col-1">{{ item.quantity }}</div>
                        <a href="{{ path('cart.remove', {id: item.creation.id}) }}" class="col-1">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                 class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                            </svg>
                        </a>
                    </div>
                {% endfor %}
            </div>
            <div class="col-3 container bg-light rounded-3 p-3 m-2">
                <a href="#" class="btn btn-primary align-self-end">Payer</a>
            </div>
        </div>
    </section>
{% endblock %}
