<div class="form-group mb-2">
    <form action="{{ path( 'admin.orders.index' ,
            {filterOrder: 'filterOrder',filterUsernameOrEmail:'filterUsernameOrEmail',filterStatus : 'filterStatus'} ) }}"
          method="get"
          class="d-flex flex-wrap align-items-center justify-content-center gap-2 ">
        <div class="form-floating flex-shrink-1">
            <input type="text" id="filterOrder" name="filterOrder" value="" class="form-control" >
            <label for="filterOrder" class="form-label">NÂ° de commande</label>
        </div>
        <div class="form-floating flex-shrink-1">
            <input type="text" id="filterUsernameOrEmail" name="filterUsernameOrEmail" value="" class="form-control">
            <label for="filterUsernameOrEmail" class="form-label">Nom ou Email</label>
        </div>
        <div class="form-floating">
            <select name="filterStatus" id="filterStatus" class="form-select">
                <option value="all" {{ filterStatus == null ? 'selected' : '' }}>Tous</option>
                <option value="pending" {{ filterStatus == "pending" ? 'selected' : '' }}>Pending</option>
                <option value="paid" {{ filterStatus == "paid" ? 'selected' : '' }}>Paid</option>
                <option value="delivered" {{ filterStatus == "delivered" ? 'selected' : '' }}>Delivered</option>
            </select>
            <label for="filterStatus" class="form-label">Status</label>
        </div>
        <button class="btn btn-primary" type="submit">Filtrer</button>
    </form>
</div>