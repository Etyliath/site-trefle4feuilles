{% extends 'admin/admin.html.twig' %}

{% block title 'Dashboard' %}

{% block body %}
    <section class="container mt-4">
        <div class="row justify-content-center justify-content-md-between align-items-center">
            <h1 class="ms-5 col-1 col-md-3 text-center">Dashboard</h1>
            <div class="mt-3 mb-2 col-md-6 rounded-2 bg-warning bg-opacity-75 shadow" style="height: 75px">
                <p class="mt-3 mx-1 text-center">Bienvenue <strong>{{ app.user.username }}</strong><br>
                    Gestion des créations de Sylvie
                </p>
            </div>
        </div>
        <div class="mt-3  px-2 pb-4 bg-info bg-opacity-50 rounded-4 shadow">
            <div class="d-flex flex-column ">
                <h4 class="text-center mt-2">Gestion des créations et des profils</h4>
                <div class="d-flex justify-content-evenly align-items-center mt-2 gap-2">
                    <a href="{{ path('admin.categories.create') }}" class="btn btn-outline-primary shadow">Ajouter une catégorie</a>
                    <a href="{{ path('admin.creations.create') }}" class="btn btn-outline-primary shadow">Ajouter une création</a>
                    <a href="{{ path('profil.listUsers') }}" class="btn btn-outline-danger shadow">Profil utilisateur</a>
                </div>
            </div>

        </div>
    </section>
    <section class="container mt-4" data-controller="commentModal">
        <hr>
        <a href="{{ path('admin.comments.index') }}" class="btn btn-outline-primary shadow mb-3">Voir tous les commentaires</a>
        <h4 class="text-center mb-3">Liste des commentaires à valider</h4>
        {% include 'admin/comment/partials/moadalShow.html.twig' %}
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(comments,'Date', 'c.createdAt') }}</th>
                    <th>Username</th>
                    <th class="text-center">validated</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for comment in comments %}
                    <tr>
                        <td>{{ comment.createdAt|date("d M Y", "Europe/Paris") }}</td>
                        <td>{{ comment.user.username }}</td>
                        <td class="text-center">
                            {% if comment.validated %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-check-square" viewBox="0 0 16 16">
                                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                                    <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/>
                                </svg>
                            {% else %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-square" viewBox="0 0 16 16">
                                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                                </svg>
                            {% endif %}

                        </td>
                        <td class="">
                            <div class="text-center">
                                <!-- Button trigger modal Show -->
                                <button type="button" class="open-modal-show border-0 bg-white"
                                        data-id="{{ comment.id }}"
                                        data-created_at="{{ comment.createdAt|date("d M Y H:m", "Europe/Paris") }}"
                                        data-username="{{ comment.user.username }}"
                                        data-email="{{ comment.user.email }}"
                                        data-creation="{{ comment.creation.name }}"
                                        data-message="{{ comment.message|nl2br }}"
                                        data-validated="{{ comment.validated }}"
                                        data-bs-toggle="modal" data-bs-target="#showModal">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                         class="bi bi-eye" viewBox="0 0 16 16">
                                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                                    </svg>
                                </button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="mt-3 d-flex justify-content-center justify-content-md-end">
            {{ knp_pagination_render(comments) }}
        </div>
    </section>

{% endblock %}