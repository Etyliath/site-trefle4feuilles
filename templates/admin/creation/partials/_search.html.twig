<div class="form-group mb-2 border-1">
    <form action="{{ path( url , {filter: 'category'}) }}" method="get"
          class="d-flex align-items-center justify-content-center gap-2">
        <div class="form-floating">
            <select name="category" id="category" class="form-select ">
                <option value="" {{ category is empty ? 'selected' : '' }}>Toutes les catégories</option>
                {% for cat in categories %}
                    <option value="{{ cat.id }}" {{ category == cat.id ? 'selected' :'' }}>{{ cat.name }}</option>
                {% endfor %}
            </select>
            <label for="category" class="text-nowrap" >Par catégorie</label>

        </div>
        <div class="form-floating">
            <input type="text" id="name" name="name" value="{{ name }}" class="form-control" placeholder="entrer un nom">
            <label for="name" class="form-label">Par nom</label>
        </div>
        <button class="btn btn-primary" type="submit">Filtrer</button>
    </form>
</div>