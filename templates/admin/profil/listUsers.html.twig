{% extends 'admin/admin.html.twig' %}

{% block title 'Profil' %}

{% block body %}

    <section class="container mt-2">
        <h1 class="text-center">Liste des utilisateurs</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.roles|join(', ') }}</td>
                    <td>
                        <a href="{{ path('profil.setAdmin', {id: user.id}) }}" class="btn btn-primary btn-sm">
                            Set Admin
                        </a>
                        <a href="{{ path('profil.unsetAdmin', {id: user.id}) }}" class="btn btn-sm btn-danger">
                            Unset Admin
                        </a>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    </section>

{% endblock %}
