{% extends 'admin/admin.html.twig' %}

{% block title 'Profil' %}

{% block body %}

    <section class="container mt-2">
        <h1 class="text-center">Liste des utilisateurs</h1>
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles|join(', ') }}</td>
                        <td>
                            <div class="btn-group gap-2">
                                <a href="{{ path('profile.setAdmin', {id: user.id}) }}" class="btn btn-primary btn-sm">
                                    Set Admin
                                </a>
                                <a href="{{ path('profile.unsetAdmin', {id: user.id}) }}" class="btn btn-sm btn-danger">
                                    Unset Admin
                                </a>
                            </div>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

{% endblock %}
